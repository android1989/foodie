<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reviews_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/reviews_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/reviews_user_image"
        android:src="@drawable/profile_avatar_small"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/reviews_username"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/reviews_user_image"
        android:gravity="start"
        android:text="UserName"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

    <RatingBar
        android:id="@+id/reviews_restaurent_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stepSize="0.5"
        android:isIndicator="true"
        android:numStars="5"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/reviews_time_ago_text"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_below="@+id/reviews_user_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-15dp"
        android:layout_toRightOf="@+id/reviews_user_image"
        android:gravity="top"
        android:text="20 hours ago" />

    </RelativeLayout>

    <TextView
        android:id="@+id/restaurent_reviews_text"
        android:text="Write Here Review...."
        android:layout_below="@+id/reviews_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:gravity="left"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"/>


</RelativeLayout>